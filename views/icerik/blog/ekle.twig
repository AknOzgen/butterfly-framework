{% extends 'home/home/masterpage.twig' %}

{% block container %}
    <p>
        <h2>
            {% if blog %}
                Blog Düzenle <small>hatasız kul olmaz</small>
            {% else %}
                Blog Ekle <small>kendini göster</small>
            {% endif %}
        </h2>
    </p>

    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="title">Başlık</label>
            <input type="text" name="title" id="title" value="{{ blog.title }}" class="form-control" placeholder="Yaratıcı Şeyler...." />
        </div>

        <div class="form-group">
            <label for="tags">Etiketler <small>Virgülle ayırın.</small></label>
            <input type="text" name="tags" id="tags" value="{{ blog.tags }}" class="form-control" placeholder="Çok, iddialı, şeyler, görüyorum" />
        </div>

        <div class="form-group">
            <label for="image">Resim</label>
            <input type="file" name="image" id="image" class="form-control" />
        </div>

        <div class="form-group">
            <label for="content">İçerik</label>
            <textarea name="content" id="content" class="ckeditor form-control">{{ blog.content|raw }}</textarea>
        </div>

        <div class="form-group">
            <button class="btn btn-success">
                <i class="glyphicon glyphicon-plus"></i>
                Ekle
            </button>
        </div><br /><br /><br />
    </form>
{% endblock %}