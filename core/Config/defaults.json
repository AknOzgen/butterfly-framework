{
    "meta": {
        "application_name": "Butterfly Framework"
    },
    "route": {
        "name": "/",
        "bundle": "home",
        "controller": "default",
        "method": "main"
    },
    "allowed_cli_commands": [
        "create",
        "bundle",
        "controller",
        "method",
        "remove",
        "check",
        "route"
    ],
    "bundle_structure": {
        "dirs": [
            "Config",
            "Controllers",
            "Helpers",
            "Models"
        ],
        "files": [
            "Controllers/home"
        ]
    },
    "errors": {
        "show_error_codes": true,
        "show_error_texts": true
    }
}